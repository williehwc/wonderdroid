<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:layout_width">54dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:shadowColor">#dddddddd</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

   	<style name="Theme.Dark" parent="Theme.Sherlock">
   	    <item name="android:actionBarStyle">@style/MyActionBar</item>
   	    <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
	</style>
	
   	<style name="Theme.Light" parent="Theme.Sherlock.Light.DarkActionBar">
   	    <item name="android:actionBarStyle">@style/MyActionBarInverse</item>
   	</style>
	
   	<style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
	    <item name="android:background">#1e5292</item>
	</style>
	
   	<style name="MyActionBarInverse" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
	    <item name="android:background">#1e5292</item>
	</style>

   	<style name="OverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more_vert</item>
    </style>

</resources>